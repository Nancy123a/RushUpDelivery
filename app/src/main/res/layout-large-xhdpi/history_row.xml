<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/completeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_50"
        android:layout_marginRight="@dimen/padding_70"
        android:layout_marginLeft="@dimen/padding_70">
        <View
            android:id="@+id/firstpoint"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/smallpoint" />



        <View
            android:id="@+id/thirdpoint"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/smallpoint"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/smallpoint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_toRightOf="@+id/firstpoint"
            android:layout_toLeftOf="@+id/thirdpoint"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_toEndOf="@+id/firstpoint" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeline"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_marginLeft="@dimen/padding_70"
        android:layout_marginRight="@dimen/padding_70"
        android:layout_marginBottom="@dimen/padding_50">

        <TextView
            android:id="@+id/pickup_point"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/text_size_18"
            android:text="@string/pickup_point"/>

        <TextView
            android:id="@+id/delivery_point"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:textSize="@dimen/text_size_18"
            android:text="@string/dropoff_point"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/otherinfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/date_time_price"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginStart="@dimen/padding_20" />

 </RelativeLayout>

    <RelativeLayout
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/completeline"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_alignParentEnd="true">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:tint="@color/trans_hint"
        android:layout_alignParentTop="true"
        android:src="@mipmap/right" />
    </RelativeLayout>

</RelativeLayout>