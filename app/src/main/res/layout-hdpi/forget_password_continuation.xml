<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_100"
        android:src="@mipmap/logo" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@drawable/close" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_marginRight="@dimen/padding_16"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:layout_marginTop="@dimen/padding_40"
            android:padding="@dimen/padding_8"
            android:gravity="center"
            android:textSize="@dimen/text_size_12"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_1"
            android:paddingTop="@dimen/padding_1"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />

        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_15"
            android:padding="@dimen/padding_8"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/verification_code"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_1"
            android:paddingTop="@dimen/padding_1"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/Next"
            android:textStyle="bold"
            android:paddingBottom="@dimen/padding_30"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />


    </RelativeLayout>
