<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_50"
        android:layout_marginRight="@dimen/padding_40"
        android:layout_marginLeft="@dimen/padding_40">

        <View
            android:id="@+id/firstpoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/smallpoint" />

        <View
            android:id="@+id/secondpoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/smallpoint" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/black" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_15">

        <TextView
            android:id="@+id/pickup_point"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_12"
            android:text="@string/pickup_delivery"/>

        <TextView
            android:id="@+id/dollars"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_12"
            android:text="@string/dollars"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:tint="@color/trans_hint"
            android:layout_alignParentTop="true"
            android:src="@mipmap/right" />
    </RelativeLayout>



</RelativeLayout>