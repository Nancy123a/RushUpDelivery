<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_30"
    android:layout_marginRight="@dimen/padding_30"
    android:background="@drawable/shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/attribute_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_30"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/attribute_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attribute_name"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_30"
        android:background="@drawable/edittextshape"
        android:ems="10"
        android:padding="@dimen/padding_5"
        android:maxLines="1"
        android:paddingBottom="@dimen/padding_1"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_5"
        android:paddingTop="@dimen/padding_1"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/attribute_value"
        android:layout_marginBottom="@dimen/padding_16"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_30"
        android:background="@drawable/okay"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30"
        android:padding="@dimen/padding_8"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/update"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/attribute_value"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_30"
        android:background="@drawable/okay"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>