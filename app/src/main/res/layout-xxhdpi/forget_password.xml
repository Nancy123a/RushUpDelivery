<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3"
    android:id="@+id/coordinator">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/forget_password"
            android:layout_alignStart="@+id/forget_password"
            android:layout_below="@+id/close"
            android:layout_marginTop="@dimen/padding_100"
            android:src="@mipmap/logo" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_20"
                android:background="@mipmap/close" />

        <TextView
            android:id="@+id/here_to_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:text="@string/helpyou"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/padding_30"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sent_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/here_to_help"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_10"
            android:text="@string/insert_email"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_15"
            android:gravity="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sent_pass"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_50"
            android:padding="@dimen/padding_8"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/email"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_1"
            android:paddingTop="@dimen/padding_1"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />


        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/send_link"
            android:textStyle="bold"
            android:paddingBottom="@dimen/padding_30"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"/>

    </RelativeLayout>
